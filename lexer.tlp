use "std.tlp"

const INVALID 0 1 - end

const SizeOf(Loc) SizeOf(int) SizeOf(int) SizeOf(Str) + + end
struct Loc
    int // column
    int // line
    Str // file
end

fn Loc.column Loc -> int do
    Loc.0
end

fn Loc.line Loc -> int do
    Loc.1
end

fn Loc.file Loc -> Str do
    Loc.2
end

fn Loc.AddToColumn Loc int -> Loc do
    
    push split pop
    swap push
    swap push
    + pop pop cast(Loc)
end

fn Loc.IncrementLine Loc -> Loc do

    split push swap drop
    1 swap 1 + pop cast(Loc)
    
end

fn Loc.Print Loc do
    split
    puts ":" puts putd ":" puts putd
end

const TokenValue.IntKind  0                       end
const TokenValue.StrKind  TokenValue.IntKind  1 + end
const TokenValue.BoolKind TokenValue.StrKind  1 + end
const TokenValue.WordKind TokenValue.BoolKind 1 + end
const SizeOf(TokenValue) SizeOf(int) SizeOf(Str) SizeOf(int) + + end
struct TokenValue
    int // int value
    Str // Str Value
    int // kind
end

fn TokenValue.Kind TokenValue -> int do
    TokenValue.2
end

fn TokenValue.FromInt int -> TokenValue do
    "" TokenValue.IntKind cast(TokenValue)
end

fn TokenValue.FromStr Str -> TokenValue do
    INVALID swap TokenValue.StrKind cast(TokenValue)
end

fn TokenValue.FromBool bool -> TokenValue do
    if do 1 else 0 end "" TokenValue.BoolKind cast(TokenValue)
end

fn TokenValue.Int TokenValue -> int do
    split
    if TokenValue.IntKind == do
        drop
    else
        "Tried to get int from non-int TokenValue." eputs
        1 exit
        drop
    end
end

fn TokenValue.Str TokenValue -> Str do
    split
    if TokenValue.StrKind == do
        swap drop
    else
        "Tried to get Str from non-Str TokenValue." eputs
        1 exit
        swap drop
    end
end

fn TokenValue.Bool TokenValue -> bool do
    split
    if TokenValue.BoolKind == do
        drop if 1 == do
            true
        else
            false
        end
    else
        "Tried to get bool from non-bool TokenValue." eputs
        1 exit
        drop drop false
    end
end

struct Token
    Loc         // loc
    TokenValue  // value
    int         // type
end

fn Token.Loc Token -> Loc do
    Token.0
end

fn Token.Value Token -> TokenValue do
    Token.1
end

fn Token.Type Token -> int do
    Token.2
end

const SizeOf(Token) SizeOf(Loc) SizeOf(TokenValue) SizeOf(int) + + end
const TokenListCap 100000 end
reserve TokenListData TokenListCap SizeOf(Token) * end
reserve TokenListSize SizeOf(int) end
reserve TokenListPtr  SizeOf(ptr) end

fn TokenList.Init do

    TokenListData TokenListPtr !64
    0 TokenListSize !64

end

fn TokenList.Push Token do

    TokenListPtr @64 push
    split

    pop dup SizeOf(int) + push cast(ptr) !64  // Token.Type
    split
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.TokenValue.Kind
    split
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.TokenValue.Str.Data
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.TokenValue.Str.Size
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.TokenValue.int
    split split
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.Loc.File.Data
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.Loc.File.Size
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.Loc.Line
    pop dup SizeOf(int) + push cast(ptr) !64  // Token.Loc.Column

    pop TokenListPtr !64
    TokenListSize @64 1 + TokenListSize !64
end

fn TokenList.Pop -> Token do

    TokenListPtr @64 SizeOf(int) - push
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.Loc.Column
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.Loc.Line
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.Loc.File.Size
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.Loc.File.Data
    cast(ptr) cast(Str) cast(Loc)
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.TokenValue.int
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.TokenValue.Str.Size
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.TokenValue.Str.Data
    cast(ptr) cast(Str)
    pop dup SizeOf(int) - push cast(ptr) @64 // Token.TokenValue.Kind
    cast(TokenValue)
    pop dup push cast(ptr) @64 // Token.Type
    cast(Token)

    pop TokenListPtr !64
    TokenListSize @64 1 - TokenListSize !64
end

